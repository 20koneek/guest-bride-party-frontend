{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "outDir": "build",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": "src",
        "paths": {
            "app/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
